extends ../layouts/layout

block content
  .row.justify-content-center
    .col-md-8.col-lg-6
      .card.shadow.border-0.mt-4
        .card-header.bg-primary.text-white.text-center.py-3
          h3.mb-0 Create Account
        .card-body.p-4
          if error
            .alert.alert-danger
              i.fas.fa-exclamation-circle.me-2
              | #{error}
          
          if success
            .alert.alert-success
              i.fas.fa-check-circle.me-2
              | #{success}
              .mt-2
                a.btn.btn-sm.btn-primary(href="/auth/login") Login Now
          else
            form(action="/auth/register" method="POST")
              .row
                .col-md-6.mb-3
                  label.form-label(for="full_name") Full Name 
                  input#fullname.form-control(type="text" name="full_name" placeholder="Enter your full name" required)
                
                .col-md-6.mb-3
                  label.form-label(for="username") Username
                  .input-group
                    span.input-group-text
                      i.fas.fa-user
                    input#username.form-control(type="text" name="username" placeholder="Choose a username" required)
              
              .row
                .col-md-6.mb-3
                  label.form-label(for="email") Email Address
                  .input-group
                    span.input-group-text
                      i.fas.fa-envelope
                    input#email.form-control(type="email" name="email" placeholder="Enter your email" required)
                
                .col-md-6.mb-3
                  label.form-label(for="phone_number") Phone Number
                  .input-group
                    span.input-group-text
                      i.fas.fa-phone
                    input#phone_number.form-control(type="tel" name="phone_number" placeholder="Enter your phone number")
              
              .row
                .col-md-6.mb-3
                  label.form-label(for="password") Password
                  .input-group
                    span.input-group-text
                      i.fas.fa-lock
                    input#password.form-control(type="password" name="pass" placeholder="Create a password" required)
                
                .col-md-6.mb-3
                  label.form-label(for="confirmPassword") Confirm Password
                  .input-group
                    span.input-group-text
                      i.fas.fa-lock
                    input#confirmPassword.form-control(type="password" name="confirmPass" placeholder="Confirm your password" required)
              
              .mb-3
                label.form-label(for="role") Bio (Optional)
                textarea#bio.form-control(name="role" rows="3" placeholder="Tell us a little about yourself")
              
              .mb-3.form-check
                input#termsCheck.form-check-input(type="checkbox" name="terms" required)
                label.form-check-label(for="termsCheck") I agree to the 
                  a(href="/terms" target="_blank") Terms of Service 
                  | and 
                  a(href="/privacy" target="_blank") Privacy Policy
              
              .d-grid.gap-2
                button.btn.btn-primary.py-2(type="submit") Create Account
        
        .card-footer.bg-light.py-3.text-center
          p.mb-0 Already have an account? 
            a.text-decoration-none(href="/auth/login") Login here 